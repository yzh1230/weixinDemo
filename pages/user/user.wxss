.user-wrap{
  position: absolute;
  width: 100%;
  height:100%;
  top:0;
  left: 0;
  background: #f1f1f1;
}
.avatar{
  width: 120rpx;
  height:120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.avatar image {
  width: 100%;
  height:100%;
}
.user-head{
  width: 100%;
  height: 300rpx;
  background: #DAA520;
  padding: 30rpx;
}
