/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.coupon-wrap{
  width: 100%;
  padding:0rpx 30rpx;
  margin-bottom: 20rpx;
}
.coupon-content{
  background: #ffcccc;
  padding:20rpx 0rpx;
}
.coupon{
  border-right: 1px solid #cdcdcd;
  color: #707070;
  font-size:24rpx;
  line-height:48rpx;
}
.coupon-num{
  color: #FF3300;
   font-size:48rpx;
}
.coupon:last-child{
  border:none !important;
}
.banner-big{
  width: 100%;
}
.banner-big image {
  width: 100%;
}
.banner-sm{
  width: 50%;
  margin-right: 10rpx;
}
.banner-sm image{
  width: 100%;
}
.banner-tips{
  font-size:36rpx;
  border-left: 8rpx solid #FA8072;
  height: 50rpx;
  line-height: 50rpx;
  padding-left:15rpx;
}
.banner-title{
  font-size:28rpx;
  line-height: 36rpx;
}
.banner-price{
  font-size:28rpx;
  line-height: 36rpx;
  color: #FF3300;
}
