/* pages/classification/classification.wxss */
.content-left{
  background: #f7f7f7;
  width: 25%;
  height:100%;
  overflow-y: scroll;
  overflow-x: hidden;
}
.content-right{
  background: #fff;
  width: 75%;
  height:100%;
  overflow-y: scroll;
  overflow-x: hidden;
}
.left-item{
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  font-size:24rpx;
  text-align: center;
  color: #696969
}
.left-item-selected{
  color: #333;
  background: #fff;
}
.right-item{
  width:100%;
  height: 300rpx;
  padding:20rpx;
  border-top:1rpx solid #F5F5F5;
  border-bottom:1rpx solid #F5F5F5;
  margin-bottom:-1rpx;
}
.goods-icon{
  width:30%;
}
.goods-detail{
  width:70%;
  height:100%;
  padding:20rpx;
}
.goods-title{
  font-size:28rpx;
  width:100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.goods-desc{
  font-size:24rpx;
  width:100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: #A9A9A9;
  margin-top:20rpx;
}
.goods-tips{
  font-size:20rpx;
  margin-top:20rpx;
  color: #f75279;
  border:1rpx solid #f75279;
  padding:5rpx 15rpx;
  text-align: center;
  display: inline-block;
  border-radius: 5rpx;
}
.goods-price {
   width:100%;
   margin-top:30rpx;
}
.add-goods{
  color: #fff;
  background: #f75279;
  width: 40rpx;
  height:40rpx;
  font-size:36rpx;
  text-align: center;
  border-radius: 50%;
}